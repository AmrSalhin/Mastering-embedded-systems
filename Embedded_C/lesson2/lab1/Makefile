CC=arm-none-eabi-
CFLAGS=-g  -mcpu=arm926ej-s
INCS=-I .
SRC=$(wildcard *.c)
OBJ=$(SRC:.c=.o)
AS=$(wildcard *.s)
ASOBJ=$(AS:.s=.o)

%.o: %.c
		$(CC)gcc.exe -c $(CFLAGS) $(INCS) $< -o $@


%.o: %.s
	 $(CC)as.exe $< -o $@

learn-in-depth.elf: $(OBJ) $(ASOBJ)
	 $(CC)ld.exe -T linker_script.ld $(OBJ) $(ASOBJ) -o $@


learn-in-depth.bin: learn-in-depth.elf
	 $(CC)objcopy.exe -O binary $< $@
 
 clearall: 
		rm *.bin *.elf *.o
	




